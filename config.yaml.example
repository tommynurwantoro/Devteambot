appName: devteambot
appVersion: v0.1
environment: production
shutdownDelay: 10 # in seconds

http:
  port: 8080
  writeTimeout: 15 # in seconds
  readTimeout: 15 # in seconds

logger:
  fileLocation: logs/devteambot.log
  fileMaxSize: 50 # megabytes
  fileMaxBackup: 10
  fileMaxAge: 30 # days
  stdout: true

database:
  host: 127.0.0.1
  port: 5432
  dbName: devteambot
  user: root
  password: secret
  sslmode: disable
  maxIdleConn: 10
  connMaxLifetime: 1 # in hours
  maxOpenConn: 100

discord:
  appID: "1133723109548113982"
  token: ${DISCORD_TOKEN}
  runInitCommand: false
  runDeleteCommand: false

redis:
  address: ${REDIS_ADDRESS}
  port: ${REDIS_PORT}
  password: ${REDIS_PASSWORD}

schedulers:
  - sholat-get-today-schedule:
      enable: true
      time:
        hour: 3
        minute: 0
        second: 0
  - sholat-send-reminder:
      enable: true
  - presensi-send-reminder-pagi:
      enable: true
      time:
        hour: 7
        minute: 55
        second: 0
  - presensi-send-reminder-sore:
      enable: true
      time:
        hour: 17
        minute: 5
        second: 0
  - point-reset-quota:
      enable: true
      time:
        hour: 0
        minute: 0
        second: 0